<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AMXSFamilyZone" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnTertiary">@color/prussian_blue</item>
    </style>

    <style name="Theme.Register" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?colorSurfaceContainerLow</item>
    </style>

    <style name="Theme.Login" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?colorSurfaceContainerLow</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AboutCard" parent="Theme.AMXSFamilyZone">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="strokeWidth">.3dp</item>
        <item name="strokeColor">?colorControlNormal</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="AboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="drawableTint">?colorControlNormal</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">?colorSurfaceContainerLow</item>
        <item name="android:colorAccent">@color/hazard_orange</item>
        <item name="android:textColor">?colorControlNormal</item>
        <item name="android:textColorSecondary">@color/eagle_blue</item>
        <!-- Button text color -->
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="fontFamily">@font/allerta</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="CustomViewSeparator" parent="">
        <item name="android:background">?colorSurfaceContainerLow</item>
    </style>

</resources>