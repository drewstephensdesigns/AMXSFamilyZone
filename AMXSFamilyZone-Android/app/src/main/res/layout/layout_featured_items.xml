<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Essential -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/single_pub_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:clickable="true"
        app:cardElevation="5dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/single_pub_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                tools:text = "Taking care of service members and family"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/single_pub_number"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/allerta"
                android:layout_height="wrap_content"
                tools:text = "Spouse Employment"
                android:maxLines="3"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pub_opr"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/alata"
                android:layout_height="wrap_content"
                tools:text = "Military One Source"
                android:maxLines="3"
                android:textAlignment="center"
                android:textSize="13sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>