<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.github.drewstephensdesigns.amxsfamilyzone.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_add_post"
        android:name="com.github.drewstephensdesigns.amxsfamilyzone.ui.posting.AddPostFragment"
        android:label="@string/title_add_post"
        tools:layout="@layout/fragment_add_post">

    </fragment>

    <fragment
        android:id="@+id/navigation_quick_links"
        android:name="com.github.drewstephensdesigns.amxsfamilyzone.ui.resources.ResourcesFragment"
        android:label="@string/title_quick_links"
        tools:layout="@layout/fragment_resources" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.github.drewstephensdesigns.amxsfamilyzone.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.github.drewstephensdesigns.amxsfamilyzone.ui.profile.EditProfileFragment"
        android:label="@string/title_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.github.drewstephensdesigns.amxsfamilyzone.ui.settings.SettingsFragment"
        android:label="@string/action_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>